{
  "manifest_version": 3,
  "name": "Pretty GPT",
  "version": "1.0",
  "description": "ChatGPT background color switcher",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "images/logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}