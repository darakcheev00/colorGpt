{
    "manifest_version": 3,
    "name": "Pretty GPT",
    "version": "1.0",
    "description": "ChatGPT background color switcher",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "images/logo.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  